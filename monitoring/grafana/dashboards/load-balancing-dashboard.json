{
  "dashboard": {
    "id": null,
    "title": "Load Balancing Dashboard",
    "tags": ["load-balancing", "microservices"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Requests per Cart Service Instance",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{job=~\"cart-service-instance-.*\"}[5m])",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Response Time Comparison",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_sum{job=~\"cart-service-instance-.*\"}[5m]) / rate(http_server_requests_seconds_count{job=~\"cart-service-instance-.*\"}[5m])",
            "legendFormat": "{{job}} - Avg Response Time"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Total Requests Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(http_server_requests_seconds_count{job=~\"cart-service-instance-.*\"}) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Error Rate by Instance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{job=~\"cart-service-instance-.*\",status=~\"5..\"}[5m])",
            "legendFormat": "{{job}} - 5xx Errors"
          },
          {
            "expr": "rate(http_server_requests_seconds_count{job=~\"cart-service-instance-.*\",status=~\"4..\"}[5m])",
            "legendFormat": "{{job}} - 4xx Errors"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "API Gateway Load Balancing",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{job=\"api-gateway\",uri=\"/carts/**\"}[5m])",
            "legendFormat": "API Gateway - Cart Requests"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Instance Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"cart-service-instance-.*\"}",
            "legendFormat": "{{job}} - Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 12,
          "x": 12,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "refresh": "5s"
  }
} 